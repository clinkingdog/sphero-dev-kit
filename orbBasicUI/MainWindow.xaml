<Window x:Class="orbBasicUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sphero orbBasic Testing GUI" Height="512" Width="529">
    <Grid Background="#FFC7C7C7" Margin="0,0,0,-1">
        <Rectangle x:Name="ColourPanel" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="120" Margin="20,340,0,0" Stroke="Black" VerticalAlignment="Top" Width="160"/>

        <Button Content="Find Devices" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="160" Height="40" Click="FindDevices"/>
        <ListBox x:Name="Devices" HorizontalAlignment="Left" Height="160" Margin="20,80,0,0" VerticalAlignment="Top" Width="160"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="20,260,0,0" VerticalAlignment="Top" Width="160" Height="40" Click="ConnectToSelectedDevice"/>
        <TextBox x:Name="Code" HorizontalAlignment="Left" Height="380" Margin="220,20,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="280" AcceptsReturn="True"/>
        <Button Content="Run!" HorizontalAlignment="Left" Margin="360,420,0,0" VerticalAlignment="Top" Width="140" Height="40" Click="RunCode"/>
        <TextBox x:Name="R_value" HorizontalAlignment="Left" Height="20" Margin="40,360,0,0" TextWrapping="Wrap" Text="255" VerticalAlignment="Top" Width="30" TextChanged="R_value_TextChanged"/>
        <TextBox x:Name="G_value" HorizontalAlignment="Left" Height="20" Margin="85,360,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="30" TextChanged="G_value_TextChanged" RenderTransformOrigin="0.333,7.95"/>
        <TextBox x:Name="B_value" HorizontalAlignment="Left" Height="20" Margin="130,360,0,0" TextWrapping="Wrap" Text="255" VerticalAlignment="Top" Width="30" RenderTransformOrigin="1.125,0.625" TextChanged="B_value_TextChanged"/>
        <Button Content="Set Colour" HorizontalAlignment="Left" Margin="40,400,0,0" VerticalAlignment="Top" Width="120" Height="40" Click="SetSelectedColor"/>
        <Button Content="Abort" HorizontalAlignment="Left" Margin="220,420,0,0" VerticalAlignment="Top" Width="120" Height="40" Click="Abort"/>

    </Grid>
</Window>
